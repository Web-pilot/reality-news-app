<!DOCTYPE html>
<html lang="en">
  <!-- head -->
  <%- include("./partials/head.ejs") %>
  <body>
    <!-- navbar -->
    <%- include("./partials/general-navbar.ejs") %>

    <!-- sidebar -->
    <%- include("./partials/sidebar.ejs") %>

    <hr />
    <div class="container mt-5">
      <h5 class="mt-3 text-center">
        News /
        <a href="/dashboard/categories" class="btn btn-primary btn-sm"
          >NEWS CATEGORIES</a
        ><a href="/dashboard" class="btn btn-primary btn-sm mx-2">Users</a>
      </h5>
      <hr />
      <div class="row">
        <% if(news) { %> <% news.forEach(item => { %>
         <div class="col-12 col-md-6 col-lg-3">
            <a href="/news/details/<%=item.newsid  %> " class="nav-link">
              <div class="card" id="<%=item.newsid %> ">
                <img src="/<%-item.img  %> " alt="" class="w-100" height="150"/>
                <div class="card-body">
            
                  <span style="text-transform: capitalize;"><%=item.title.slice(0, 15) %>... </span>
                </div>
            </a>
                <div class="card-footer" id="<%=item.newsid  %> ">
                  <button
                  class="btn btn-sm btn-danger del my-1"
                  id="<%=item.newsid  %> "
                >
                  <i class="bi bi-trash"></i> Delete
                </button>
                </div>
           </div>
      </div>
        <% }) %> <% } %>
      </div>
    </div>

    <!-- script -->
    <%- include("./partials/script.ejs") %>
    <script>
      window.addEventListener("load", function () {
        deleteNews();
      });
    </script>
  </body>
</html>
