<!DOCTYPE html>
<html lang="en">
  <!-- head -->
  <%- include("./partials/head.ejs") %>
  <body>
    <!-- navbar -->
    <%- include("./partials/general-navbar.ejs") %>

    <!-- sidebar -->
    <%- include("./partials/sidebar.ejs") %>

    <hr/>
    <div class="container mt-5">
      <h5 class="mt-3 text-center">Users / <a href="/dashboard/categories" class="btn btn-primary btn-sm">NEWS CATEGORIES</a><a href="/dashboard/news" class="btn btn-primary btn-sm mx-2">NEWS</a></h5>
      <hr />
      <div class="row">
        <% if(users) { %> <% users.forEach(user => { %>
        <div class="col-12 col-md-6 col-lg-3">
          <a href="/user/details/<%=user.userid  %> " class="nav-link">
            <div class="card" id="<%=user.userid %> ">
              <img src="<%-user.profilepic  %> " alt="" class="w-100" height="150"/>
              <div class="card-body">
                <span><%=user.firstname %> </span><br />
                <span><%=user.email %> </span>
              </div>
          </a>
              <div class="card-footer" id="<%=user.userid  %> ">
                <button type="button" class="btn btn-danger btn-sm del-account">
                  Delete user
                </button>
              </div>
            </div>
        </div>
        <% }) %> <% } %>
      </div>
    </div>

    <!-- script -->
    <%- include("./partials/script.ejs") %>
    <script>
      window.addEventListener("load", function() {
         deleteUserFromDb()
      })
    </script>
  </body>
</html>
