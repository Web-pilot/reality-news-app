<!DOCTYPE html>
<html lang="en">
  <!-- head -->
  <%- include("./partials/head.ejs") %>
  <body>
    <!-- NAVBAR -->
    <%- include("./partials/general-navbar.ejs") %>

    <!-- SIDEBAR -->
    <%- include("./partials/sidebar.ejs") %>

    <!-- NEWS DETAILS -->
    <section class="profile">
      <% if(user) { %>
      <div class="container">
        <div class="user-details" id="<%=user.userid  %> ">
          <span class="username"
            ><span><i class="bi bi-person"></i></span><%=user.username %>
          </span>
          <img src="/<%-user.profilepic %> " alt="" />
          <span class="email"
            ><i class="bi bi-envelope"></i> <%=user.email %></span
          >
          <span class="name"
            ><i class="bi bi-person"></i> <%=user.firstname %> <%=user.lastname
            %></span
          >
          <span class="address"
            ><i class="bi bi-house"></i> <%=user.address %></span
          >
          <span class="phone"
            ><i class="bi bi-telephone"></i> <%=user.phone %></span
          >
          <button
            type="button"
            class="btn btn-sm btn-danger del-account"
            id="delete-account"
          >
            <i class="bi bi-trash"></i> DELETE ACCOUNT
          </button>
        </div>

        <div class="row">
          <div class="col-12 col-md-6">
            <div class="edit-form">
              <form
                class="edit-profile-form"
                method="post"
                action="/api/user/edit/<%-user.userid  %> "
              >
                <h3>EDIT PROFILE</h3>
                <div class="form-group">
                  <label for="email"
                    ><i class="bi bi-person"></i> Username</label
                  >
                  <input
                    type="text"
                    name="username"
                    id="username"
                    class="form-control"
                    value="<%=user.username %>"
                  />
                </div>
                <div class="form-group">
                  <label for="email"
                    ><i class="bi bi-envelope"></i> Email</label
                  >
                  <input
                    type="email"
                    name="email"
                    id="email"
                    class="form-control"
                    value="<%=user.email %>"
                  />
                </div>
                <div class="form-group">
                  <label for="firstname"
                    ><i class="bi bi-person"></i> First Name</label
                  >
                  <input
                    type="text"
                    name="firstname"
                    id="firstname"
                    class="form-control"
                    value="<%=user.firstname %>"
                  />
                </div>
                <div class="form-group">
                  <label for="text"
                    ><i class="bi bi-person"></i> Last Name</label
                  >
                  <input
                    type="text"
                    name="lastname"
                    id="lastname"
                    class="form-control"
                    value="<%=user.lastname %>"
                  />
                </div>
                <div class="form-group">
                  <label for="phone"
                    ><i class="bi bi-telephone"></i> Phone</label
                  >
                  <input
                    type="tel"
                    name="phone"
                    id="phone"
                    class="form-control"
                    value="<%=user.phone %>"
                  />
                </div>
                <div class="form-group">
                  <label for="address"
                    ><i class="bi bi-house"></i> Address</label
                  >
                  <input
                    type="text"
                    name="address"
                    id="address"
                    class="form-control"
                    value="<%=user.address %>"
                  />
                </div>
                <div class="form-group">
                  <input
                    type="submit"
                    value="submit"
                    class="btn btn-outline-primary"
                  />
                </div>
              </form>
            </div>
          </div>
          <div class="col col-6">
            <form
              action="/api/user/changeProfile/<%-user.userid %>"
              method="post"
              enctype="multipart/form-data"
              id="profileImgForm"
            >
              <h4>Change profile picture</h4>
              <img src="" alt="" class="profile-preview-img m-2" />
              <label for="profilepic" class="btn btn-sm btn-primary"
                ><i class="bi bi-upload"></i></label
              ><br />
              <input
                type="file"
                name="img"
                id="profilepic"
                style="display: none"
                required
              />
              <input type="submit" value="Upload" class="btn btn-success" />
            </form>
          </div>
        </div>
      </div>
      <% } %>
    </section>

    <!-- FOOTER -->
    <footer class="footer">&copy; Reality news App</footer>

    <!-- SCRIPTS -->
    <%- include("./partials/script.ejs") %>
    <script>
      window.addEventListener("load", function () {
        changeProfilePic();
        deleteUserFromDb();
      });
    </script>
  </body>
</html>
