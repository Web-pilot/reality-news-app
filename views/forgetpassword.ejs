<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>
  <body>
    <div class="container mt-5 w-80 border p-4">
      <form action="/api/authentication/forgetpassword" method="post">
        <h5>
          Enter the email you use to open account with Reality news App to reset
          you password
        </h5>
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            name="email"
            id="email"
            class="form-control"
            required
          />
        </div>
        <input type="submit" class="btn btn-sm btn-primary" />
      </form>
    </div>
    <%- include("./partials/script.ejs") %>
  </body>
</html>
